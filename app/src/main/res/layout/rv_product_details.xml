<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mall_image"
                android:layout_width="match_parent"
                android:layout_height="100pt"
                android:scaleType="centerCrop"
                android:src="@drawable/navbar_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/product_name"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:ellipsize="none"
                android:gravity="left"
                android:maxLines="2"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:scrollHorizontally="false"
                android:text="Lemonzuer Pasta"
                android:textColor="@color/dark_teal"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/mall_image"/>

            <TextView
                android:id="@+id/item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:ellipsize="none"
                android:gravity="left"
                android:maxLines="2"
                android:paddingLeft="6dp"
                android:scrollHorizontally="false"
                android:text="Lemonzuer Pasta"
                android:paddingBottom="6dp"
                android:textColor="@color/dark_teal"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/product_name"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:ellipsize="none"
                android:gravity="left"
                android:paddingLeft="6dp"
                android:scrollHorizontally="false"
                android:text="RM5.00"
                android:textColor="@color/dark_teal"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/item_details"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/mall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="6dp"
                android:text="AEON Mall"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/mall_image"
                app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/create_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/dark_teal"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="Create Event"
                android:textStyle="bold">

            </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/event_icon"
                    android:background="@color/dark_teal"/>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/dark_teal"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="Add To Cart"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/shopping_cart_icon"
                        android:background="@color/dark_teal"/>

                </LinearLayout>


        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_to_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/heart_icon" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>