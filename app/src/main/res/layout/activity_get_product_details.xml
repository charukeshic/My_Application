<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetProductDetails">

    <androidx.drawerlayout.widget.DrawerLayout

        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Favourites"
        android:fitsSystemWindows="true"
        android:background="@color/light_green"
        tools:openDrawer="end">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/main_menu" />


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Favourites">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_fb"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_round_menu"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="330dp"
                    android:background="@drawable/button_fb"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/shopping_cart_icon"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="79dp"
                android:padding="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/mall_image"
                                android:layout_width="match_parent"
                                android:layout_height="150pt"
                                android:scaleType="centerCrop"
                                android:src="@drawable/navbar_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/product_name"/>

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="135pt"
                                android:layout_height="wrap_content"
                                android:breakStrategy="simple"
                                android:ellipsize="none"
                                android:gravity="left"
                                android:maxLines="2"
                                android:paddingLeft="6dp"
                                android:paddingTop="6dp"
                                android:scrollHorizontally="false"
                                android:text="Lemonzuer Pasta"
                                android:textColor="@color/dark_teal"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/mall_image"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/item_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:breakStrategy="simple"
                                android:ellipsize="none"
                                android:gravity="left"
                                android:maxLines="2"
                                android:paddingLeft="6dp"
                                android:scrollHorizontally="false"
                                android:text="Lemonzuer Pasta"
                                android:paddingBottom="6dp"
                                android:textColor="@color/dark_teal"
                                android:textSize="19dp"
                                app:layout_constraintTop_toBottomOf="@id/product_name"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/item_details"
                                app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:breakStrategy="simple"
                                android:ellipsize="none"
                                android:gravity="left"
                                android:paddingLeft="6dp"
                                android:layout_marginLeft="35dp"
                                android:scrollHorizontally="false"
                                android:text="5.00"
                                android:textColor="@color/dark_teal"
                                android:textSize="19dp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:breakStrategy="simple"
                                    android:ellipsize="none"
                                    android:gravity="left"
                                    android:paddingLeft="6dp"
                                    android:scrollHorizontally="false"
                                    android:text="RM"
                                    android:textColor="@color/dark_teal"
                                    android:textSize="19dp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/mall_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:padding="8dp"
                                android:text="AEON Mall"
                                android:textSize="15dp"
                                android:textAllCaps="false"
                                app:layout_constraintTop_toBottomOf="@id/mall_image"
                                app:layout_constraintEnd_toEndOf="parent"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginTop="40dp">

                            <LinearLayout
                                android:id="@+id/create_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@color/dark_teal"
                                    android:textColor="@color/white"
                                    android:padding="10dp"
                                    android:text="Create Event"
                                    android:textStyle="bold">

                                </TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:src="@drawable/event_icon"
                                    android:background="@color/dark_teal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@color/dark_teal"
                                    android:textColor="@color/white"
                                    android:padding="10dp"
                                    android:text="Add To Cart"
                                    android:textStyle="bold">

                                </TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:src="@drawable/shopping_cart_icon"
                                    android:background="@color/dark_teal"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_to_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:padding="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:src="@drawable/heart_icon" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>