<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="1pt"
    tools:replace="android:theme">

        <ImageView
            android:id="@+id/mall_image"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:src="@drawable/navbar_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:scrollHorizontally="false"
            android:text="Lemonzuer Pasta"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mall_image"/>

        <TextView
            android:id="@+id/item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:scrollHorizontally="false"
            android:text="Lemonzuer Pasta"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toEndOf="@id/mall_image"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_details"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="42pt">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:layout_marginLeft="26dp"
            android:scrollHorizontally="false"
            android:text="5.00"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:scrollHorizontally="false"
            android:text="RM"
            android:textSize="14dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/mall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:breakStrategy="simple"
        android:ellipsize="none"
        android:gravity="left"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:scrollHorizontally="false"
        android:text="AEON"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_details"
        app:layout_constraintStart_toEndOf="@id/mall_image"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mall_name"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:text="3"
            android:paddingLeft="30pt"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginRight="30dp"
            android:scrollHorizontally="false"
            android:text="Quantity : "
            android:textSize="15dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/totalDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mall_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10pt"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginRight="50dp"
            android:paddingRight="15dp"
            android:scrollHorizontally="false"
            android:text="Sub Total : "
            android:textSize="15dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/mall_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10pt"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:layout_marginLeft="26dp"
            android:scrollHorizontally="false"
            android:text="5.00"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:scrollHorizontally="false"
            android:text="RM"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>